<EditForm Model="@_filter" OnSubmit="@GetFilterElementsAsync">
    <div>
        <span>Фильтр по Заказу</span>
    </div>
    <div class="input-group">
        <span class="input-group-text">Number:</span>
        <InputText class="form-control" placeholder="Number" @bind-Value="_filter.Number" />
    </div>
    <div class="md-form row">
        <div class="col-2 d-flex align-items-center">
            <label for="starting">Диапозон</label>
        </div>
        <div class="col-5">
            <InputDate placeholder="Selected starting date" id="startingDate" class="form-control datepicker" @bind-Value="_filter.Start" />
        </div>
        <div class="col-5">
            <InputDate placeholder="Selected starting date" id="startingDate" class="form-control datepicker" @bind-Value="_filter.End" />
        </div>
    </div>
    <div class="col row">
        <div class="col">
            @if (Providers is not null)
            {
                <select @bind="_filter.Provider.Id">
                    @foreach (var item in Providers)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            }
        </div>
    </div>
    <div>
        <span>Фильтр по предмету заказа</span>
        <div>
            <div class="input-group">
                <span class="input-group-text">Name:</span>
                <InputText class="form-control" placeholder="Name" @bind-Value="_filter.Name" />
            </div>
            <div class="input-group">
                <span class="input-group-text">Unit:</span>
                <InputText class="form-control" placeholder="Unit" @bind-Value="_filter.Unit" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <button type="submit"> Фильтр </button>
        </div>
    </div>
</EditForm>
@if (_isOrders)
{
    <OrdersTable Orders="Orders" />
}
