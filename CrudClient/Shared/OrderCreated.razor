
<EditForm Model="@_order" OnValidSubmit="@CreatedOrder">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="input-group">
        <span class="input-group-text">Number:</span>
        <InputText class="form-control" placeholder="Number" @bind-Value="_order.Number" />
        <ValidationMessage For="@(()=>_order.Number)" />
    </div>

    <div class="md-form row">
        <div class="col-1 d-flex align-items-center">
            <label for="starting">Data:</label>
        </div>
        <div class="col-11">
            <InputDate placeholder="Selected starting date" id="startingDate" class="form-control datepicker" @bind-Value="_order.DateTime" />
            <ValidationMessage For="@(()=>_order.DateTime)" />
        </div>
    </div>
    <div class="row">
        <div class="col row">
            <div class="col">
                @if (_order.Provider is not null)
                {
                    <select @bind="_order.Provider.Id">
                        @foreach (var item in _providers)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <button @onclick="CreatedOrder"> Создать Заказ </button>
        </div>
    </div>
</EditForm>

