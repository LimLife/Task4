<table class="table mt-4 border-bottom">
    <thead>
        <tr>
            <th>@nameof(_order.Id)</th>
            <th>@nameof(_order.Number)</th>
            <th>@nameof(_order.DateTime)</th>
            <th>@nameof(_order.Provider)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Orders)
        {
            <tr @onclick="(() => NavigateToOrder(item.Id))">
                <td> @item.Id</td>
                <td> @item.Number</td>
                <td> @item.DateTime</td>
                <td> @item.Provider.Name</td>
            </tr>
        }
    </tbody>
</table>

